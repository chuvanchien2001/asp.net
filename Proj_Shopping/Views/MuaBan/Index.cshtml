@model IEnumerable<Proj_Shopping.Models.Sanpham>
@{
    ViewBag.Title = "Index";
}

<h2>Cửa Hàng Online</h2>
<h4>Qúy khách chọn mua các sản phẩm sau đây:</h4>
<table class="table-bordered" width="500">
    <tr style="background-color:#ffffcc">
        <td align="center">Mã sản phẩm</td>
        <td>Tên sản phẩm</td>
        <td>Hình ảnh</td>
        <td align="center">Giá tiền</td>
        <td>Mua hàng</td>
    </tr>
    @foreach (var item in Model)
            {
                <tr>
                    <td align="center"></td>
                    <td>@item.tensp</td>
                    <td align="center">
                        <img src="~/Content/Image/@item.hinhanh" width="80" />
                    </td>
                    <td align="center">@item.giatien</td>
                    <td align="center">
                        @Html.ActionLink("Chọn mua","Chonmua","Muaban",
                       new Proj_Shopping.Models.Sanpham { masp=item.masp},null
                       )
                    </td>
                </tr>
            }
</table>
<br />
<br />
@Html.ActionLink("Xem giỏ hàng","XemGioHang","MuaBan")

